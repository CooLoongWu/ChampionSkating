/* pages/publish/publish.wxss */

.flex {
  display: flex;
}

.input {
  background: #f4f5f7;
  padding: 25rpx;
  letter-spacing: 1rpx;
  word-spacing: 1rpx;
  border-radius: 4rpx;
  font-size: 38rpx;
  color: #333;
}

.textarea {
  width: 100%;
  background: #f4f5f7;
  height: 200rpx;
  letter-spacing: 1rpx;
  word-spacing: 1rpx;
  display: flex;
  padding: 25rpx;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #666;
}

.margin-top {
  margin-top: 40rpx;
}

.margin-top-10 {
  margin-top: 10rpx;
}

.margin-left-20 {
  margin-left: 20rpx;
}

.text-name-club {
  font-size: 38rpx;
}

.text-position {
  font-size: 32rpx;
  color: #333;
}

.text-position-type {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  border: solid;
  border-width: 3rpx;
  border-radius: 30rpx;
  border-color: #16ba63;
  font-size: 30rpx;
  color: #666;
}

.text-content {
  font-size: 32rpx;
  color: #999;
}

.text-title {
  font-size: 36rpx;
  color: #666;
}

.text-default {
  font-size: 32rpx;
  color: #333;
}

.text-action {
  font-size: 32rpx;
  color: #16ba63;
}

.input-salary {
  width: 160rpx;
  font-size: 36rpx;
  text-align: center;
  background: #f4f4f4;
}

.input-salary-placeholder {
  text-align: center;
  font-size: 32rpx;
}

.relative {
  position: relative;
}

.text-waring {
  font-size: 24rpx;
  position: absolute;
  right: 10rpx;
  bottom: 5rpx;
}

.color-waring {
  color: red;
}

.color-normal {
  color: #16ba63;
}
