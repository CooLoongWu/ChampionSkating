<view class='layout-center'>

  <view class='layout-vertical shadow'>
    <view class="label {{gender==1?'label-color-male':'label-color-female'}}">{{title}}</view>
    <image class="avatar" src='{{avatarUrl}}'></image>

    <view class="text-nickname  {{gender==1?'male':'female'}}">{{nickName}}</view>

    <view wx:if='{{false}}' class="text-gender {{gender==1?'male':'female'}}">{{gender==1?"男":"女"}}</view>

    <view class="text-address">{{address}}</view>

    <view wx:if="{{contact}}" class="text-contact">{{contact}}</view>

  </view>
  <view class="text-hint">注：非诚勿扰，请不要随意骚扰他人！</view>
</view>