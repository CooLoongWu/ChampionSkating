/* pages/personal/personal.wxss */

/* 设置页面背景色 */

page {
  background: #f6f7f9;
  height: 100%;
}

.block-layout {
  width: 100%;
  display: flex;
  background: #fff;
}

.linear-layout-vertical {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.linear-layout-horizontal {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.height {
  height: 110rpx;
}

.contact-layout {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.center {
  align-items: center;
  justify-content: center;
}

.padding-40 {
  padding: 40rpx;
}

