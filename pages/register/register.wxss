/* pages/register/register.wxss */

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.card {
  width: 60%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.text-nickname {
  font-size: 40rpx;
  text-align: right;
}

.text-gender {
  font-size: 32rpx;
  text-align: right;
}

.content {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.check-box {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.left {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right {
  width: 30%;
  align-items: center;
  margin-right: 10rpx;
  display: flex;
  flex-direction: row-reverse;
}

.question {
  width: 40rpx;
  margin-right: 10rpx;
  height: 40rpx;
}

.location {
  font-size: 32rpx;
  color: #666;
  margin-left: 20rpx;
}

.button {
  width: 88%;
  height: 88rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
  border-radius: 44rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #01a862;
  font-size: 36rpx;
  color: #fff;
}

button::after {
  border: 0;
}

.button-dis {
  width: 88%;
  height: 88rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
  border-radius: 44rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #eee;
  font-size: 36rpx;
  color: #fff;
}

.button-hover {
  background: #199659;
  /* 比默认颜色深了10% */
}

.button-dis-hover {
  background: #eee;
  /* 比默认颜色深了10% */
}

.button-text {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
}
