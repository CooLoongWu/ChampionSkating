/* pages/register/register.wxss */

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  background: #eee;
}

.card {
  width: 60%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.text-nickname {
  font-size: 40rpx;
  text-align: right;
}

.text-gender {
  font-size: 32rpx;
  text-align: right;
}

.content {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.check-box {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.left {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right {
  width: 30%;
  align-items: center;
  margin-right: 10rpx;
  display: flex;
  flex-direction: row-reverse;
}

.question {
  width: 40rpx;
  margin-right: 10rpx;
  height: 40rpx;
}

.location {
  font-size: 32rpx;
  color: #666;
  margin-left: 20rpx;
}
