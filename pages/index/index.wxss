/**index.wxss**/

page {
  min-height: 100%;
}

.margin-top-15 {
  margin: 30rpx 0 0 0;
}

.margin-top-10 {
  margin: 10rpx 0 0 0;
}

.title-icon {
  height: 2rem;
  width: 2rem;
  margin-right: 30rpx;
  vertical-align: middle;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  background: #eee;
}

.left {
  width: 35%;
}

.right {
  width: 65%;
}

.circle-float {
  color: #fff;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 20rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  font-size: 28rpx;
  background: #4eee94;
}

.layout-row {
  margin-left: 45rpx;
  margin-right: 45rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.layout-column {
  width: 30%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.circle {
  border-radius: 30rpx;
  box-shadow: 0rpx 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.image-ic {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  /* margin: 15rpx 15rpx 0rpx 15rpx;  *//* margin:上 右 下 左 */
  border-radius: 30rpx 30rpx 15rpx 15rpx;
}

.text-ic {
  color: #333;
  font-size: 30rpx;
  margin: 16rpx;
}
