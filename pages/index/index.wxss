page {
  min-height: 100%;
  background: #f0eff4;
}

.padding {
  padding: 40rpx;
}

.margin-user-name {
  margin-left: 20rpx;
  width: 100%;
}

.margin-user-type {
  margin-top: 10rpx;
}

.background-green {
  background: #16ba63;
}

.background-change {
  background: linear-gradient(rgba(22, 186, 99, 1), rgba(255, 255, 255, 0));
}

.height {
  height: 80rpx;
}

.height-double {
  height: 150rpx;
}

.banner {
  display: flex;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  width: 100%;
  height: 250rpx;
  border-radius: 18rpx;
}

.relative {
  position: relative;
  background: #fff;
  top: -80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.text-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.text-title- {
  font-size: 20rpx;
  font-weight: 600;
  color: #333;
}

.text-subtitle {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #333;
}

.text-content {
  font-size: 24rpx;
  color: #666;
}

.text-user-name {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #fff;
}

.text-user-type {
  width: 150rpx;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  background: #fdb086;
  font-size: 22rpx;
  text-align: center;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #9d5e46;
  border-radius: 28rpx;
  box-shadow: 0rpx 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.space {
  justify-content: space-between;
}

.space-around {
  justify-content: space-around;
}

.center-column {
  /* justify-content: center; */
  align-items: center;
}

.center {
  justify-content: center;
  align-items: center;
}

.margin-top-30 {
  margin: 30rpx 0 0 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  border-radius: 50%;
  overflow: hidden;
  justify-content: center;
  /* align-items: center; */
}

.avatar-background {
  display: flex;
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  background: #fff;
  justify-content: center;
  align-items: center;
}


.image-ic {
  width: 12vw;
  height: 12vw;
}

.image-setting {
  display: block;
  width: 45rpx;
  height: 45rpx;
}


.show-not {
  visibility: hidden;
}
