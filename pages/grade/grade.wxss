/* pages/grade/grade.wxss */

/* 继承自app.wxss中的global-block */

.margin-top-15 {
  margin: 15rpx 0 0 0;
}

.scroll-view {
  widows: 100%;
  /* height: 100%; */
  white-space: nowrap;
  /* white-space: nowrap; 必须设置 */
  display: flex;
}

.scroll-item {
  display: inline-block;
  /* display: inline-block;必须设置 */
  width: 66%;
  margin: 40rpx 30rpx 40rpx 5rpx;
  /* margin: 上 右 下 左; 必须设置才能显示出阴影 */
  padding: 8rpx;
  border-radius: 20rpx;
  background: #fff;
  text-align: center;
  box-shadow: 0rpx 5rpx 16rpx rgba(0, 0, 0, 0.1);
  /* box-shadow:x y 虚化*/
}

.text-figure {
  font-size: 32rpx;
  text-align: center;
  /* 垂直、水平居中 */
  width: 100%;
  color: #666;
  margin: 20rpx 0 20rpx 0;
  /* display: block;
  white-space: pre-line; *//* 上两行为文本换行 */
}

.icon {
  width: 1.8em;
  height: 1.8em;
}

.image-corner {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  /* margin: 15rpx 15rpx 0rpx 15rpx;  *//* margin:上 右 下 左 */
  border-radius: 20rpx 20rpx 10rpx 10rpx;
}
